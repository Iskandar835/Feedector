{
    "manifest_version": 3,
    "name": "Konecter",
    "version": "1.0.0",
    "description": "Ajoute automatiquement les personnes qui commentent tes posts LinkedIn !",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["*://www.linkedin.com/*"],
        "js": ["src/content/content.js"]
      }
    ]
  }